<h3> Take Cards from another Entity</h3>
<% room_id_hash =session[session["room_id"]] %>
<% this_players_name = room_id_hash["name"] %>

<%= form_tag cards_take_cards_choose_cards_path :class => 'form' do %>
  <table><thead>
  <tr>
    <th>Select a single Entity to Take Cards from</th>
  </tr>
  </thead>
    <tbody>
    <% @players.each do |curr_player| %>
      <tr>
        <td>
          <% if curr_player[:name] != this_players_name %>
          <%= curr_player.name %>
        </td>
        <td>
        <%= check_box_tag "player_selected[#{curr_player.id}]", 1, false, :id => "checkbox_#{curr_player.id}" %>
        </td>
          <% end%>
      </tr>
    <% end %>
    </tbody></table>


  <%= button_to 'Take cards from the selected player', :class => 'btn btn-secondary' %>
<% end %>

